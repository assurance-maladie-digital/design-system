{
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"name": "@cnamts/design-system",
	"scripts": {
		"prepublishOnly": "mono-run build",
		"dev": "mono-run playground --stream",
		"lint": "mono-run lint --stream",
		"test": "mono-run test --stream",
		"build": "mono-run build --stream",
		"dev:lerna": "lerna run playground --stream",
		"lint:lerna": "lerna run lint --stream",
		"test:lerna": "lerna run test --stream",
		"build:lerna": "lerna run build --stream"
	},
	"devDependencies": {
		"@types/fs-extra": "^8.0.1",
		"@types/jest": "^24.0.23",
		"@types/node": "^12.12.17",
		"@typescript-eslint/eslint-plugin": "^2.11.0",
		"@typescript-eslint/parser": "^2.11.0",
		"@vue/eslint-config-typescript": "^5.0.1",
		"copy-webpack-plugin": "^5.1.0",
		"dayjs": "^1.8.17",
		"deepmerge": "^4.2.2",
		"eslint": "^6.7.2",
		"eslint-plugin-jsdoc": "^18.4.3",
		"eslint-plugin-vue": "^6.0.1",
		"fs-extra": "^8.1.0",
		"html-webpack-plugin": "^3.2.0",
		"jest": "24.9.0",
		"lerna": "^3.19.0",
		"lint-staged": "^9.5.0",
		"monorepo-run": "^0.4.2",
		"ts-jest": "^24.2.0",
		"ts-node": "^8.5.4",
		"typescript": "~3.5.3",
		"vue": "^2.6.10",
		"vue-class-component": "^7.1.0",
		"vue-template-compiler": "^2.6.10",
		"webpack-node-externals": "^1.7.2",
		"webpack": "^4.41.2"
	},
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.{js,ts,vue}": [
			"lerna run lint --stream --",
			"git add"
		]
	}
}
