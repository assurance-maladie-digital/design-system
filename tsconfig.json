{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"strict": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"preserveSymlinks": true,
		"types": ["node", "fs-extra"],
		"lib": ["esnext", "dom"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.vue",
		"src/**/*.json"
	],
	"exclude": ["node_modules"]
}
