{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"strict": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"preserveSymlinks": true,
		"types": [
			"node",
			"fs-extra"
		],
		"lib": [
			"es2017",
			"es2015",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"exclude": [
		"node_modules"
	]
}
