{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"types": [
			"node",
			"jest"
		],
		"esModuleInterop": true
	},
	"include": [
		"dev/**/*.ts",
		"dev/**/*.vue",
		"src/**/*.ts",
		"src/**/*.vue",
		"tests/**/*.ts",
		"types/**/*.ts",
		"scripts/**/*.ts",
		"*.json"
	],
	"exclude": [
		"node_modules"
	],
	"vueCompilerOptions": {
		"target": 2.7
	}
}
