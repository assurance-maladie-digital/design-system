{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"strict": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"baseUrl": ".",
		// Fix type conflict between Jest and Cypress
		"skipLibCheck": true,
		"types": [
			"node",
			"jest",
			"vuetify"
		],
		"paths": {
			"@/*": [
				"src/*"
			],
			"@/tests-unit/*": [
				"tests/unit/*"
			],
			"@/tests-unit": [
				"tests/unit/"
			]
		},
		"lib": [
			"esnext",
			"dom"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.vue",
		"tests/unit/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
