{
	"name": "@cnamts/vue-dot",
	"version": "2.1.0",
	"description": "Implementation of our Design System for the French Health Insurance",
	"keywords": [
		"cnam",
		"vue",
		"vue-dot",
		"vue-cli",
		"component-library"
	],
	"homepage": "https://github.com/assurance-maladie-digital/design-system#readme",
	"bugs": {
		"url": "https://github.com/assurance-maladie-digital/design-system/issues",
		"email": "digital_TL.cnam@assurance-maladie.fr"
	},
	"license": "MIT",
	"author": {
		"name": "CNAM",
		"email": "digital_TL.cnam@assurance-maladie.fr"
	},
	"files": [
		"dist/*",
		"src/*",
		"tests/integration/utils/*",
		"tests/utils/*",
		"tests/index.ts",
		"types/*"
	],
	"main": "./dist/vue-dot.common.js",
	"module": "./src/index.ts",
	"types": "./types/index.d.ts",
	"scripts": {
		"post-install": "ts-node --project tsconfig.json --files scripts/post-install.ts",
		"pre-commit": "lint-staged",
		"dev": "vue-cli-service serve",
		"build": "ts-node --project tsconfig.build.json --files scripts/build.ts",
		"lint": "vue-cli-service lint",
		"test": "yarn test:unit && yarn test:e2e",
		"test:unit": "vue-cli-service test:unit --runInBand",
		"test:e2e": "nyc cypress run-ct",
		"test:e2e:gui": "cypress open-ct"
	},
	"dependencies": {
		"@cypress/code-coverage": "^3.9.11",
		"content-disposition": "^0.5.3",
		"cypress-plugin-snapshots": "^1.4.4",
		"deepmerge": "^4.2.2"
	},
	"peerDependencies": {
		"@cnamts/design-tokens": "^2.0.0-beta.10",
		"@cnamts/form-builder": "^2.0.0-beta.10",
		"@mdi/js": "^5.0.0 || ^6.0.0",
		"axios": "^0.22.0 || ^0.23.0 || ^0.24.0",
		"dayjs": "^1.8.0",
		"languages": "^0.1.3",
		"vue": "^2.6.11",
		"vue-input-facade": "^1.3.1",
		"vuetify": "^2.3.0",
		"vuex": "^3.5.0"
	},
	"devDependencies": {
		"@cnamts/cli-helpers": "^2.1.0",
		"@cypress/code-coverage": "^3.9.11",
		"@cypress/vue": "^2.2.3",
		"@cypress/webpack-dev-server": "1.7.0",
		"@vue/cli-plugin-babel": "4.5.15",
		"@vue/cli-plugin-eslint": "4.5.15",
		"@vue/cli-plugin-typescript": "4.5.15",
		"@vue/cli-plugin-unit-jest": "4.5.15",
		"@vue/cli-service": "4.5.15",
		"cypress": "8.7.0",
		"vue-cli-plugin-vuetify": "2.4.3",
		"vuetify-loader": "1.7.3"
	},
	"lint-staged": {
		"*.{ts,vue}": [
			"vue-cli-service lint",
			"git add"
		]
	},
	"publishConfig": {
		"access": "public"
	},
	"nyc": {
		"report-dir": "tests/e2e/coverage",
		"include": [
			"src/elements/**/*.ts",
			"src/patterns/**/*.ts"
		],
		"exclude": [
			"**/mixins/**",
			"**/data/**"
		]
	}
}
