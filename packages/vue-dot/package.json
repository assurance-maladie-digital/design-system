{
	"name": "@cnamts/vue-dot",
	"version": "2.0.0-alpha.23",
	"description": "Official CNAM component library",
	"keywords": [
		"cnam",
		"vue",
		"vue-dot",
		"vue-cli",
		"component-library"
	],
	"homepage": "https://github.com/assurance-maladie-digital/design-system/blob/master/packages/vue-dot/README.md",
	"bugs": {
		"url": "https://github.com/assurance-maladie-digital/design-system/issues",
		"email": "me@deraw.dev"
	},
	"license": "MIT",
	"author": {
		"name": "Dylan Broussard",
		"email": "me@deraw.dev"
	},
	"files": [
		"dist/*",
		"src/*",
		"public/*",
		"types/*"
	],
	"main": "./dist/vue-dot.common.js",
	"types": "types/index.d.ts",
	"scripts": {
		"playground": "vue-cli-service serve",
		"build": "ts-node --project tsconfig.json --files build.ts",
		"lint": "vue-cli-service lint",
		"test": "vue-cli-service test:unit"
	},
	"peerDependencies": {
		"dayjs": "^1.8.0",
		"languages": "^0.1.3",
		"vue": "^2.6.10",
		"vuetify": "^2.0.6",
		"vuex": "^3.1.0"
	},
	"devDependencies": {
		"@babel/core": "^7.5.5",
		"@babel/preset-env": "^7.5.5",
		"@cnamts/cli-helpers": "^2.0.0-alpha.21",
		"@mdi/js": "^4.0.96",
		"@types/jest": "^23.3.14",
		"@typescript-eslint/parser": "^1.13.0",
		"@vue/cli-plugin-babel": "^3.10.0",
		"@vue/cli-plugin-eslint": "^3.10.0",
		"@vue/cli-plugin-typescript": "^3.10.0",
		"@vue/cli-plugin-unit-jest": "^3.10.0",
		"@vue/cli-service": "^3.10.0",
		"@vue/eslint-config-standard": "^4.0.0",
		"@vue/eslint-config-typescript": "^4.0.0",
		"@vue/test-utils": "^1.0.0-beta.29",
		"babel-core": "7.0.0-bridge.0",
		"core-js": "^2.6.5",
		"dayjs": "^1.8.15",
		"deepmerge": "^4.0.0",
		"eslint": "^5.16.0",
		"eslint-plugin-jsdoc": "^15.8.3",
		"eslint-plugin-vue": "^5.2.3",
		"html-webpack-plugin": "^3.2.0",
		"jest": "23.6.0",
		"languages": "^0.1.3",
		"lint-staged": "^9.2.3",
		"prepend": "^1.0.2",
		"sass": "^1.22.10",
		"sass-loader": "^7.2.0",
		"ts-jest": "^23.10.5",
		"typescript": "^3.5.3",
		"vue": "^2.6.10",
		"vue-class-component": "^7.1.0",
		"vue-cli-plugin-vuetify": "^0.6.3",
		"vue-template-compiler": "^2.6.10",
		"vuetify": "^2.0.7",
		"vuetify-loader": "^1.3.0",
		"vuex": "^3.1.1",
		"webpack": "^4.39.2",
		"webpack-node-externals": "^1.7.2"
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie <= 8"
	],
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"js",
			"json",
			"vue"
		],
		"transform": {
			"^.+\\.vue$": "vue-jest",
			".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
			"^.+\\.tsx?$": "ts-jest"
		},
		"moduleNameMapper": {
			"^vue-dot-src/(.*)$": "<rootDir>/src/$1",
			"^vue$": "<rootDir>/node_modules/vue/dist/vue.common.js"
		},
		"snapshotSerializers": [
			"jest-serializer-vue"
		],
		"testMatch": [
			"<rootDir>/(tests/unit/**/*.spec.(js|ts)|**/__tests__/*.(js|ts))"
		],
		"coverageReporters": [
			"json",
			"lcov",
			"text",
			"html",
			"text-summary"
		],
		"coverageDirectory": "<rootDir>/tests/unit/coverage",
		"collectCoverage": true,
		"collectCoverageFrom": [
			"**/*.{ts,vue}",
			"!**/node_modules/**",
			"!**/*.d.ts",
			"!**/playground/**"
		],
		"testURL": "http://localhost/",
		"transformIgnorePatterns": [
			"./node_modules/vuetify"
		]
	},
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.{ts,vue,js}": [
			"vue-cli-service lint",
			"git add"
		]
	},
	"gitHead": "f05d735be9b01718e145d32e50fd46ea4259c04d"
}
