{
	"name": "@cnamts/vue-dot",
	"version": "2.0.0-alpha.39",
	"description": "Official CNAM component library",
	"keywords": [
		"cnam",
		"vue",
		"vue-dot",
		"vue-cli",
		"component-library"
	],
	"homepage": "https://github.com/assurance-maladie-digital/design-system/blob/master/packages/vue-dot/README.md",
	"bugs": {
		"url": "https://github.com/assurance-maladie-digital/design-system/issues",
		"email": "me@deraw.dev"
	},
	"license": "MIT",
	"author": {
		"name": "Dylan Broussard",
		"email": "me@deraw.dev"
	},
	"files": [
		"dist/*",
		"src/*",
		"public/*",
		"types/*"
	],
	"main": "./dist/vue-dot.common.js",
	"types": "types/index.d.ts",
	"scripts": {
		"playground": "vue-cli-service serve",
		"playground:build": "vue-cli-service build",
		"build": "ts-node --project tsconfig.json --files build.ts",
		"lint": "vue-cli-service lint",
		"test:unit": "vue-cli-service test:unit"
	},
	"peerDependencies": {
		"dayjs": "^1.8.0",
		"languages": "^0.1.3",
		"vue": "^2.6.10",
		"vue-the-mask": "^0.11.1",
		"vuetify": "^2.0.11",
		"vuex": "^3.1.0"
	},
	"devDependencies": {
		"@babel/core": "^7.6.4",
		"@babel/preset-env": "^7.6.3",
		"@cnamts/cli-helpers": "^2.0.0-alpha.39",
		"@mdi/js": "^4.5.95",
		"@types/jest": "^24.0.19",
		"@typescript-eslint/parser": "^1.13.0",
		"@vue/cli-plugin-babel": "^4.0.4",
		"@vue/cli-plugin-eslint": "^4.0.4",
		"@vue/cli-plugin-typescript": "^4.0.4",
		"@vue/cli-plugin-unit-jest": "^4.0.4",
		"@vue/cli-service": "^4.0.4",
		"@vue/eslint-config-standard": "^4.0.0",
		"@vue/eslint-config-typescript": "^4.0.0",
		"@vue/test-utils": "^1.0.0-beta.29",
		"babel-core": "7.0.0-bridge.0",
		"copy-webpack-plugin": "^5.0.4",
		"core-js": "^3.3.2",
		"dayjs": "^1.8.16",
		"deepmerge": "^4.1.1",
		"eslint": "^5.16.0",
		"eslint-plugin-jsdoc": "^15.12.0",
		"eslint-plugin-vue": "^5.2.3",
		"html-webpack-plugin": "^3.2.0",
		"jest": "24.9.0",
		"languages": "^0.1.3",
		"lint-staged": "^9.4.2",
		"sass": "^1.23.0",
		"sass-loader": "^8.0.0",
		"typescript": "~3.5.3",
		"vue": "^2.6.10",
		"vue-class-component": "^7.1.0",
		"vue-cli-plugin-vuetify": "^1.1.0",
		"vue-template-compiler": "^2.6.10",
		"vue-the-mask": "^0.11.1",
		"vuetify": "^2.1.5",
		"vuetify-loader": "^1.3.0",
		"vuex": "^3.1.1",
		"webpack": "^4.41.2",
		"webpack-node-externals": "^1.7.2"
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie <= 8"
	],
	"jest": {
		"preset": "@vue/cli-plugin-unit-jest/presets/typescript",
		"testMatch": [
			"<rootDir>/src/**/tests/*.spec.ts"
		],
		"moduleNameMapper": {
			"^@/tests$": "<rootDir>/tests/index.ts",
			"^@/tests/(.*)$": "<rootDir>/tests/$1",
			"^@/(.*)$": "<rootDir>/src/$1",
			"^vue$": "<rootDir>/node_modules/vue/dist/vue.esm.js"
		},
		"coverageReporters": [
			"text",
			"html",
			"text-summary"
		],
		"coverageDirectory": "<rootDir>/tests/coverage",
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*.{ts,vue}",
			"!**/node_modules/**",
			"!**/*.d.ts",
			"!**/playground/**"
		],
		"transformIgnorePatterns": [
			"./node_modules/vuetify"
		]
	},
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.{ts,vue,js}": [
			"vue-cli-service lint",
			"git add"
		]
	},
	"gitHead": "f05d735be9b01718e145d32e50fd46ea4259c04d"
}
