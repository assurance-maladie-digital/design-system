{
	// Extend root config
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"types": [
			"node",
			"jest"
		],
		"paths": {
			"@/tests/*": [
				"tests/*"
			],
			"@/tests": [
				"tests/"
			]
		}
	},
	"include": [
		// Playground
		"playground/**/*.ts",
		"playground/**/*.vue",
		// Src
		"src/**/*.ts",
		"src/**/*.vue",
		// Tests
		"tests/**/*.ts",
		// Types
		"types/**/*.ts",
		// JSON
		"*.json"
	],
	"exclude": [
		"node_modules"
	]
}
