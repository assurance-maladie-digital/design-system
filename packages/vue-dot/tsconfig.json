{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"types": [
			"node",
			"jest",
			"content-disposition"
		],
		"paths": {
			"@/*": [
				"./src/*"
			],
			"@/tests/*": [
				"tests/*"
			],
			"@/tests": [
				"tests/"
			]
		},
		"esModuleInterop": true
	},
	"include": [
		"dev/**/*.ts",
		"dev/**/*.vue",
		"src/**/*.ts",
		"src/**/*.vue",
		"types/**/*.ts",
		"scripts/**/*.ts",
		"*.json"
	],
	"exclude": [
		"node_modules",
		"tests/e2e",
		"src/**/tests/*.e2e.spec.ts"
	]
}
