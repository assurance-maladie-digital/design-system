{
    "name": "synapse-bridge",
    "version": "1.0.0",
    "private": false,
    "description": "Bridge pour passer le Design System en vue 3",
    "author": "CNAM",
    "license": "MIT",
    "files": [
        "dist"
    ],
    "keywords": [
        "vue",
        "vite",
        "template"
    ],
    "type": "module",
    "exports": {
        "./elements": {
            "import": "./dist/elements.js",
            "require": "./dist/elements.cjs"
        },
        "./patterns": {
            "import": "./dist/patterns.js",
            "require": "./dist/patterns.cjs"
        },
        "./templates": {
            "import": "./dist/templates.js",
            "require": "./dist/templates.cjs"
        }
    },
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc && vite build",
        "preview": "vite preview",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
        "format": "prettier .  --write --ignore-path .gitignore",
        "commit": "git-cz",
        "test": "vitest",
        "coverage": "vitest run --coverage"
    },
    "dependencies": {
        "vue": "^3.3.4"
    },
    "devDependencies": {
        "@rushstack/eslint-patch": "^1.1.4",
        "@types/node": "^18.11.12",
        "@vitejs/plugin-vue": "^4.0.0",
        "@vue/eslint-config-prettier": "^7.0.0",
        "@vue/eslint-config-typescript": "^11.0.0",
        "@vue/test-utils": "^2.4.0-alpha.2",
        "@vue/tsconfig": "^0.1.3",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "^8.22.0",
        "eslint-plugin-vue": "^9.3.0",
        "happy-dom": "^11.0.1",
        "lint-staged": "^13.1.0",
        "npm-run-all": "^4.1.5",
        "pathe": "^1.1.0",
        "prettier": "^2.7.1",
        "semantic-release": "^20.1.0",
        "typescript": "~4.7.4",
        "unplugin-vue-components": "^0.25.2",
        "vite": "^4.0.0",
        "vite-plugin-dts": "^1.7.1",
        "vitest": "^0.34.3",
        "vue-facing-decorator": "^3.0.2",
        "vue-tsc": "^1.0.12",
        "vuetify": "^3.3.14"
    },
    "lint-staged": {
        "*.{js,ts,vue}": "eslint --fix",
        "*.{js,ts,vue,css,scss,json,md}": "prettier --write"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
