{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"jsx": "preserve",
		"types": ["vite/client", "webpack-env", "jest"],
		"plugins": [{ "name": "typescript-tslint-plugin" }, { "name": "jsx-a11y-plugin" }],
		"useDefineForClassFields": true,
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"paths": {
			"@/*": ["./src/*"],
			"@tests/*": ["./tests/*"]
		},

		/* Bundler mode */
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true
	},
	"include": [
		"dev/**/*.ts",
		"dev/**/*.vue",
		"src/**/*.ts",
		"src/**/*.vue"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
