{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "ES2020",
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"useDefineForClassFields": true,
		"module": "ESNext",

		/* Bundler mode */
		"moduleResolution": "bundler",
		"paths": {
			"@/*": ["./src/*"],
			"@tests/*": ["./tests/*"]
		},
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"isolatedModules": true,
		"typeRoots" : ["./types"]
	},
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	],
	"include": [
		"dev/**/*.ts",
		"dev/**/*.vue",
		"src/**/*.ts",
		"src/**/*.vue"
	]
}
