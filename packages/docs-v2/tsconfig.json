{
	// Extend root config
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"types": [
			"@nuxt/types",
			"@nuxt/vue-app",
			"@nuxtjs/axios",
			"@nuxtjs/vuetify"
		],
		"paths": {
			"~/*": [
				"./src/*"
			],
			"@/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.vue"
	],
	"exclude": [
		"node_modules"
	]
}
